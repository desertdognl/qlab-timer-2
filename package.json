{
  "name": "qlab-timer",
  "version": "0.3.17",
  "description": "QLab timer display powered by Bitfocus Companion variables",
  "main": "main.js",
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac dmg --arm64",
    "dist:mac:release": "node -e \"const required=['APPLE_ID','APPLE_APP_SPECIFIC_PASSWORD','APPLE_TEAM_ID','CSC_NAME']; const missing=required.filter((key)=>!process.env[key]); if(missing.length){console.error('Missing release env vars: ' + missing.join(', ')); process.exit(1);}\" && electron-builder --mac dmg --arm64",
    "dist:win": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "34.3.0",
    "electron-builder": "25.1.8"
  },
  "build": {
    "compression": "maximum",
    "appId": "nl.desertdog.qlabtimer",
    "productName": "QLab Timer",
    "files": [
      "index.html",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}